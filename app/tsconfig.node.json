{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "node",
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"outDir": "dist-server",

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		/* Node.js specific */
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node"]
	},
	"include": ["src/server/**/*"]
}
