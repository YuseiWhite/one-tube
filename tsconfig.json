{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": ".",
		"types": ["node"]
	},
	"include": ["scripts/**/*"],
	"exclude": ["node_modules", "dist", "app", "contracts"]
}
